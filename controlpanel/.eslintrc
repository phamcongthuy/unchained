{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "airbnb"
  ],
  "rules": {
    "no-underscore-dangle": [ "error", { "allow": [ "_id", "__typename"] } ],
    "react/jsx-curly-brace-presence": [0],
    "react/prop-types": [0],
    "jsx-a11y/label-has-associated-control": [ 2, {
      "controlComponents": ["AutoField"],
    }],
    "jsx-a11y/label-has-for": [ 2, {
      "required": {
        "some": [ "nesting", "id" ]
      },
    }]
  }
}
